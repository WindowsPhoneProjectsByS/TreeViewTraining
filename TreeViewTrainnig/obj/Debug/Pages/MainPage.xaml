<Page
    x:Class="TreeViewTrainnig.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreeViewTrainnig"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:WinRTXamlToolkit.Controls.Data"
    xmlns:xc="using:WinRTXamlToolkit.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <local:TreeViewPageViewModel x:Name="TreeViewPageModel"/>
    </Page.DataContext>

    <Grid Background="Coral">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <xc:TreeView Grid.Row="0"
            x:Name="tvDataBound" 
            ItemsSource="{Binding TreeItems}" 
            local:SelectionChangedTrigger.Command="{Binding cmdTreeSelected}" 
            local:SelectionChangedTrigger.CommandParamater="{Binding SelectedBranch}">

            <xc:TreeView.ItemTemplate>
                <DataTemplate>
                    <data:DataTemplateExtensions.Hierarchy>
                        <data:HierarchicalDataTemplate ItemsSource="{Binding Children}" />
                    </data:DataTemplateExtensions.Hierarchy>
                    <TextBlock Text="{Binding Text}"/>
                </DataTemplate>
            </xc:TreeView.ItemTemplate>
        </xc:TreeView>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Padding="10,0,10,0" Grid.Column="0" Grid.Row="0">
                <StackPanel VerticalAlignment="Center">
                    <Button x:ConnectionId='2' x:Name="CreateButton" Content="Dodaj" FontSize="25"
                        Padding="10"                              HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
            <Border Padding="10,0,10,0" Grid.Column="1" Grid.Row="0">
                <StackPanel VerticalAlignment="Center">
                    <Button x:Name="ChangeNameButton" Content="Zmięń nazwę" FontSize="25"
                             Padding="10" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
            <Border Padding="10,0,10,0" Grid.Column="0" Grid.Row="1">
                <StackPanel VerticalAlignment="Center">
                    <Button x:ConnectionId='1' x:Name="DeleteButton" Content="Usuń" FontSize="25"
                            Padding="10" HorizontalAlignment="Stretch"                           />
                </StackPanel>
            </Border>
            <Border Padding="10,0,10,0" Grid.Column="1" Grid.Row="1">
                <StackPanel VerticalAlignment="Center">
                    <Button x:Name="ShowButton" Content="Pokaż" FontSize="25"
                             Padding="10" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

